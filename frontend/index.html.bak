<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investigación Operativa</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="styles.css">
</head>

<body>

    <!-- Header con botón de menú integrado -->
    <header class="main-header">
        <button id="menuToggle" class="menu-toggle">
            <i class="fas fa-bars"></i>
        </button>
        <h1>INVESTIGACIÓN OPERATIVA</h1>
    </header>

    <!-- Menú lateral -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>Menú</h2>
            <button class="close-menu" id="closeMenu">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <ul>
            <li><a href="#"><i class="fas fa-home"></i> Inicio</a></li>
            
            <li>
                <input type="checkbox" id="toggleIntegrantes" hidden>
                <label for="toggleIntegrantes" class="submenu-label">
                    <i class="fas fa-users"></i> Integrantes ▾
                </label>
                <ul class="submenu">
                    <li><i class="fas fa-user"></i> Karen Paola Ortega Mancilla</li>
                    <li><i class="fas fa-user"></i> Luis Mateo Hurtado Castro</li>
                    <li><i class="fas fa-user"></i> Marcos David Andrade Nova</li>
                </ul>
            </li>
            <li><a href="#"><i class="fas fa-cog"></i> Configuración</a></li>
        </ul>
    </aside>

    <!-- Contenido principal -->
    <main class="content">
        <!-- Sección principal -->
        <section class="card">
            <h2>Método Gráfico</h2>
            <p class="subtitle">Problemas de 2 variables (x, y, x1, x2, etc.)</p>

            <div class="datos">
                <h3>Datos del Problema</h3>
                
                <div class="optimization-type">
                    <p><b>Tipo de Optimización</b></p>
                    <div class="optimization-buttons">
                        <button class="opt-btn active" data-type="maximize">
                            <i class="fas fa-arrow-up"></i> Maximizar
                        </button>
                        <button class="opt-btn" data-type="minimize">
                            <i class="fas fa-arrow-down"></i> Minimizar
                        </button>
                    </div>
                </div>

                <p><b>Función Objetivo (Z)</b></p>
                <input type="text" placeholder="Ej: 3x + 2y o 3x1 + 2x2" id="funcionObjetivo">

                <p><b>Restricciones</b></p>
                <div id="restricciones">
                    <div class="restriction-item">
                        <input type="text" placeholder="Ej: 2x + y <= 100">
                        <button class="btn-remove-restriction" onclick="eliminarRestriccion(this)">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                
                <div class="restriction-buttons">
                    <button class="btn-add-restriction" id="addRestriccion" onclick="añadirRestriccion()">
                        <i class="fas fa-plus"></i> Añadir Restricción
                    </button>
                </div>
            </div>

            <button class="btn-resolver">
                <i class="fas fa-calculator"></i> Resolver
            </button>
        </section>

        <!-- Gráfico -->
        <section class="card">
            <h3>Visualización de la Solución</h3>
            <div id="grafico-interactivo">
                <!-- Aquí se cargará el gráfico interactivo -->
            </div>
        </section>

        <!-- Solución -->
        <section class="card" id="solucion">
            <h3>Solución Óptima</h3>
            <p>Los resultados se mostrarán aquí</p>
        </section>

        <!-- Navegación inferior -->
        <footer>
            <nav>
                <a href="#">
                    <i class="fas fa-chart-line"></i> Gráfico
                </a>
                <a href="#">
                    <i class="fas fa-project-diagram"></i> Simplex
                </a>
                <a href="#">
                    <i class="fas fa-ellipsis-h"></i> Más
                </a>
            </nav>
        </footer>
    </main>

    <!-- Librerías -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="script.js"></script>

    <!-- Script para mostrar/ocultar menú -->
    <script>
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.querySelector('.sidebar');
        const closeMenu = document.getElementById('closeMenu');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('active');
        });

        closeMenu.addEventListener('click', () => {
            sidebar.classList.remove('active');
        });
    </script>
</body>
</html>

